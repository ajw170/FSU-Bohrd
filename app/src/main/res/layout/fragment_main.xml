<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/buttonsRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gameButton1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />

        <Button
            android:id="@+id/gameButton2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />

        <Button
            android:id="@+id/gameButton3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gameButton4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />

        <Button
            android:id="@+id/gameButton5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />

        <Button
            android:id="@+id/gameButton6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gameButton7"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />

        <Button
            android:id="@+id/gameButton8"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />

        <Button
            android:id="@+id/gameButton9"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_stroke" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moveCounter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/box_margin_game"
            android:layout_marginStart="@dimen/box_margin_game"
            android:layout_marginTop="@dimen/box_margin_game"
            android:layout_weight="1"
            android:background="@color/holo_red_darker"
            android:gravity="center_vertical|start"
            android:text="@string/move_counter"
            android:textColor="@color/color_white_text" />

        <TextView
            android:id="@+id/recordKeeper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/box_margin_game"
            android:layout_marginEnd="@dimen/box_margin_game"
            android:layout_marginTop="@dimen/box_margin_game"
            android:layout_weight="1"
            android:background="@color/holo_red_darker"
            android:gravity="center_vertical|end"
            android:text="@string/record_value"
            android:textColor="@color/color_white_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/playAgainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/box_margin_game"
        android:layout_weight="1"
        android:background="@color/holo_red_darker"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/play_again"
        android:textColor="@color/color_white_text" />

    <TextView
        android:id="@+id/createdByView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/box_margin_game"
        android:layout_weight="1"
        android:background="@color/holo_red_darker"
        android:gravity="center"
        android:text="@string/created_by"
        android:textAlignment="center"
        android:textColor="@color/color_white_text" />

</LinearLayout>