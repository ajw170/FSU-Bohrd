<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_red_darker"
    android:orientation="vertical"
    tools:context=".AdvertisementActivity">

    <Button
        android:id="@+id/closeButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:background="@drawable/round_button_background"
        android:gravity="center_vertical|center_horizontal"
        android:text="X"
        android:textColor="@color/color_white_text"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/fsuLogoImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:adjustViewBounds="true"
        android:contentDescription="@string/fsu_logo"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/fsulogosmall" />

    <TextView
        android:id="@+id/advertisementTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/fsu_advertisement"
        android:textColor="@color/color_white_text"
        android:textSize="@dimen/ad_text_size_big" />

    <TextView
        android:id="@+id/linkView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/fsu_cs_link"
        android:textColor="@color/color_white_text"
        android:textSize="@dimen/ad_text_size" />
</LinearLayout>